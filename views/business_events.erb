  };
  
  var urls = {
               query_url  : '/business-events'
             };
             
  var businessEventHook = new BusinessEventHook();
  var businessEvent = new EntityManagement(urls, 'business event', <%= settings.business_events_page_size %>, businessEventHook);
 
  $('.entity-title').html('Business Events');
  
  
</script>
